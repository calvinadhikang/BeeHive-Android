<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context=".RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewe11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="190dp"
            android:text="Create Account"
            android:textColor="#373434"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewe1"
            android:layout_width="142dp"
            android:layout_height="122dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo_foreground" />

        <Button
            android:id="@+id/btnNextRegister"
            android:layout_width="314dp"
            android:layout_height="54dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="506dp"
            android:backgroundTint="@color/primary"
            android:text="Next!"
            android:textColor="#3C3535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLinkToLogin"
            android:layout_width="311dp"
            android:layout_height="33dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="580dp"
            android:text="Already have an account? Sign In!"
            android:textColor="#2196F3"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtEmailRegister"
            android:layout_width="301dp"
            android:layout_height="49dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="282dp"
            android:background="@color/textboxcolor"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#373434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="250dp"
            android:text="Email"
            android:textColor="#373434"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbProceedContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="17dp"
            android:buttonTint="@color/primary"
            android:text="I Proceed to continue"
            android:textColor="#373434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgRegister" />

        <RadioGroup
            android:id="@+id/rgRegister"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEmailRegister">

            <RadioButton
                android:id="@+id/rbBeeworker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="34dp"
                android:buttonTint="@color/primary"
                android:text="Bee Worker"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbFarmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:text="Farmer"
                android:textColor="@color/black" />
        </RadioGroup>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBackRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:src="@drawable/back"
            app:backgroundTint="@color/accent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>