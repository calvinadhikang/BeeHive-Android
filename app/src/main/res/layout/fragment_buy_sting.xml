<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".BuyStingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNamaBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Nama Sting"
            android:textColor="#064635"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/background_white_form"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtBalanceBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Balance : Rp. "
                android:textColor="#064635"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTipeBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pro"
        android:textColor="#064635"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescBuy"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:text="(Deskripsi Pro) Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard."
        android:textColor="#064635"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtHargaBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Rp. 25000"
        android:textColor="#064635"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Requirement"
        android:textColor="#064635"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtRequirementBuy"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/rounded_edittext_dark"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter your  project requirement"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyBuy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:text="Buy"
        android:textColor="#FFFFFF" />
</LinearLayout>